
<div class="center jumbotron">
  
    <div class="row">
        <div class="col-md-12">
            <h3>Add a new question!</h3>
            <%= link_to "Add now!", new_question_path, class: "btn btn-raised btn-primary" %>
        </div>
    </div>
    <% if @questions.any? %>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th style="text-align:center;">#</th>
                    <th style="text-align:center;">Question (<%= @questions.count %>)</th>
                    <th style="text-align:center;">Answer</th>
                    <th style="text-align:center;">Options</th>
                </tr>
            </thead>
            <tbody>
                <%= render @questions %>
            </tbody>
        </table>
        <%= will_paginate @questions %>
    <% end %>

